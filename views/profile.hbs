<h1 class="courses-title">Мой профиль</h1>
<div class="row">
    <div class="col s6">
        {{#if user.avatarURL}}
    <img    class="avatar"
            src="/{{user.avatarURL}}"
            alt="avatar-{{user.name}}">
        {{else}}
        <img    class="avatar"
                src="https://uska.kz/img/user/avatar.png"
                alt="avatar-{{user.name}}">
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Ваш email: <strong>{{user.email}}</strong></p>
        <div class="input-field">
            <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required>
            <label for="name">Имя пользователя</label>
            <span class="helper-text" data-error="Имя не может быть пустым"></span>
        </div>
            <div class="input-field">
                <textarea id="profileDescription" name="profileDescription" class="materialize-textarea">{{user.profileDescription}}</textarea>
                <label for="profileDescription">О себе</label>
            </div>
                <div class="file-field input-field">
                    <div class="btn">
                        <span>Аватар</span>
                        <input type="file" name="avatar">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            <button class="btn" type="submit">Изменить</button>
            <input type="hidden" name="_csrf" value="{{csrf}}">
        </form>
    </div>
</div>
