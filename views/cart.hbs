<h1 class="courses-title">Корзина</h1>
<div id="card">
{{#if courses.length}}
     <table>
         <thead>
         <tr>
             <th>Название</th>
             <th class="td-center">Количество</th>
             <th class="td-center">Действия</th>
         </tr>
         </thead>
         <tbody>

         {{#each courses}}
             <tr>
                 <td>{{title}}</td>
                 <td class="td-center">{{count}}</td>
                 <td class="td-center">
                     <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить</button>
                 </td>
             </tr>
         {{/each}}
         </tbody>
     </table>
     <p><strong>Цена:  </strong><span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
        <button class="btn" type="submit">Сделать заказ</button>
        <input type="hidden" name="_csrf" value="{{csrf}}">
    </form>
{{else}}
    <strong><p style="text-align: center; color: dimgray">Вы ничего не добавили в корзину</p></strong>
{{/if}}
</div>
